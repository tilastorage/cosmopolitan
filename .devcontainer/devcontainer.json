{
    "name": "Debian",
    "build": {
        "dockerfile": "./Dockerfile"
    },
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools-themes",
                "eamodio.gitlens",
                "ms-vscode.hexeditor",
                "esbenp.prettier-vscode",
                "rangav.vscode-thunder-client",
                "ms-vscode.cpptools",
                "fabiospampinato.vscode-highlight"
            ]
        }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ]
}